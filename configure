#!/bin/sh

. ./config.sub1
. ./config.sub2

echo $ac_n "Checking for g++... "$ac_c

test -f `which g++ 2>&1 |cut -d\  -f1` && CPP=gcc
if test -n "$CPP"; then
  echo $CPP
else
  echo no
  echo g++ is required. stop.
  exit 1
fi

AC_INCLUDES="sys/vfs.h sys/mount.h dir.h crt0.h conio.h termio.h sys/ioctl.h"

. ./config.sub3

cp -pf conftest.h config.h
rm -f conftest.[ch]

if test "$os_type" = Linux || \
   test "$os_type" = HP-UX; then
  echo 'HAVE_STATFS=1' >Makefile.cfg
  echo
  echo "Congratulations! You're running Linux! :)"
  echo
else
  echo 'HAVE_STATFS=0' >Makefile.cfg
fi

echo "Configuration finished."
echo "Now do 'make'. Preferably GNU make."
